# MongoDB Connection
# For local MongoDB, use: mongodb://127.0.0.1:27017/car_rental
# For MongoDB Atlas, use: mongodb+srv://username:password@cluster.mongodb.net/car_rental?retryWrites=true&w=majority
MONGODB_URI=mongodb://127.0.0.1:27017/car_rental

# JWT Secret Key (CHANGE THIS IN PRODUCTION!)
# Generate a strong random secret: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# JWT Token Expiration (e.g., '1h', '7d', '30d')
JWT_EXPIRE=30d

# Server Configuration
PORT=5000

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# Optional: File Upload Configuration
MAX_FILE_SIZE=10485760

# Optional: Session Configuration
SESSION_SECRET=your_session_secret_change_this
